@{
    ViewData["Title"] = "Conversion History";
    var filters = ViewBag.Filters;
    var history = Model as IEnumerable<dynamic>;
}

<h1 class="mb-4">Conversion History</h1>

<form method="get" class="card p-4 shadow-sm mb-4">
    <div class="row mb-3">
        <div class="col-md-2">
            <input type="text" name="fromCurrency" value="@filters?.fromCurrency" class="form-control" placeholder="From" />
        </div>
        <div class="col-md-2">
            <input type="text" name="toCurrency" value="@filters?.toCurrency" class="form-control" placeholder="To" />
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="minAmount" value="@filters?.minAmount" class="form-control" placeholder="Min Amount" />
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="maxAmount" value="@filters?.maxAmount" class="form-control" placeholder="Max Amount" />
        </div>
        <div class="col-md-2">
            <input type="date" name="startDate" value="@(filters?.startDate?.ToString("yyyy-MM-dd"))" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="endDate" value="@(filters?.endDate?.ToString("yyyy-MM-dd"))" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a href="/Home/History" class="btn btn-secondary ms-2">Clear</a>
</form>

@if (history != null && history.Any())
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Amount</th>
                <th>Converted</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in history)
            {
                <tr>
                    <td>@item.FromCurrency</td>
                    <td>@item.ToCurrency</td>
                    <td>@item.Amount</td>
                    <td>@item.ConvertedAmount</td>
                    <td>@item.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No history found.</div>
}

<div class="mt-3">
    <a href="/Home/Index" class="btn btn-outline-primary">← Back to Converter</a>
</div>
